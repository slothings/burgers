<h1>Welcome to Eat-A-Burger!</h1>

<div class="burgers">
  <h2>Burgers Available:</h2>

  <ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="devoured">
  <h2>Burgers Eaten:</h2>

  <ul>
    {{#each burger}}
    {{#if devoured}}
    {{> burger devoured=true}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div class="adder">
  <h2>Create a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Create Burger</button>
  </form>
</div>